apiVersion: v1
kind: Secret
metadata:
  name: staliaswarden-secrets
  namespace: staliaswarden
type: Opaque
stringData:
  # API token for Bitwarden extension authentication
  api_token: "your-api-token-here"
  
  # Email domain for aliases (optional, can be overridden in requests)
  alias_domain: "yourdomain.com"
  
  # Main email address where all aliases will forward to
  forward_to: "your-main-email@example.com"
  
  # Stalwart credentials
  stalwart_username: "your-stalwart-username"
  stalwart_password: "your-stalwart-password"

