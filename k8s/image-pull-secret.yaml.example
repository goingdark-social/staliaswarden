# Create this secret to pull images from GHCR
# Replace YOUR_GITHUB_TOKEN with a Personal Access Token that has 'read:packages' permission
#
# kubectl create secret docker-registry ghcr-secret \
#   --docker-server=ghcr.io \
#   --docker-username=YOUR_GITHUB_USERNAME \
#   --docker-password=YOUR_GITHUB_TOKEN \
#   --namespace=staliaswarden

apiVersion: v1
kind: Secret
metadata:
  name: ghcr-secret
  namespace: staliaswarden
type: kubernetes.io/dockerconfigjson
data:
  .dockerconfigjson: # Base64 encoded docker config JSON
    # Use kubectl create secret command above instead of manually encoding

